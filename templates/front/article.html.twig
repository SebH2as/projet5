{% extends "/front/layout.html.twig" %}

{% block title %}
    Article {{article.title}}
{% endblock %}

{% block separator %}
    <div id="separator01"></div>
{% endblock %}

{% block script %}
    <script src="js/navbar.js"></script>
{% endblock %}

{% block content %}

        <div id="sectionImg">
            <img class="rubricImg" src="images/{{article.articleCover}}" alt="{{article.articleCover |slice( 0, -4)}}">
        </div>

        <section id="article">

            <div id="titleArticle">
                <a href="index.php?action=magByNumber&amp;idMag={{magazine.id_mag}}&amp;numberMag={{magazine.numberMag}}"><h3>Magazine N°{{magazine.numberMag}}</h3></a>
                <h1>{{article.textType |upper }}</h1>
                <a href="index.php?action=magByNumber&amp;idMag={{magazine.id_mag}}&amp;numberMag={{magazine.numberMag}}"><h3>Magazine N°{{magazine.numberMag}}</h3></a>
                <div id="separator02"></div>
            </div>

            <div id="articleContent">
                <span>Le {{article.date_creation |date("d/m/Y", "Europe/Paris")}}</span><h3>Par {{article.author}}</h3>
                <h2>{{article.title}}</h2>
                <span>{{decode(article.content) |raw |nl2br}} </span>
            </div>
            
        </section>

{% endblock %}