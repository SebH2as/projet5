{% extends "/front/layout.html.twig" %}

{% block title %}
    Modifier mon {{userData |lower }}
{% endblock %}

{% block separator %}
    <div id="separator01"></div>
{% endblock %}

{% block script %}
    <script src="js/navbar.js"></script>
    <script src="js/infoBox.js"></script>
{% endblock %}

{% block content %}

        <div id="sectionImg">
            <img class="rubricImg" src="images/{{magazine.cover}}" alt="{{magazine.cover |slice( 0, -4)}}">
        </div>

        <section id="article">

            <div id="titleArticle">
                <h2>KILOMETRAGE</h2>
                <h1>MODIFIER MON {{userData |upper }}</h1>
                <h2>KILOMETRAGE</h2>
                <div id="separator02"></div>
            </div>

            <div id="infos">
                <span>
                   Vous pouvez modifier votre {{userData |lower }} à l'aide du formulaire ci-dessous.
                </span>
            </div>

            <span id="error" class="{% if not error %}none{% endif %}">{{error}}</span>

            <form id="formSignIn" action="index.php?action=modifDataUser&amp;idMag={{magazine.id_mag}}&amp;userData={{userData}}" method="post">
                
                <input type="hidden" name="csrf" value="{{token}}">
                
                <label for="password">Veuillez saisir votre mot de passe actuel:</label>
                <input type="password" id="password" name="password" maxlength="70" size="70">

                <div class="containInfoBox">
                    <div class="infoBox hidden"><span>{% if userData == 'Pseudo' %}Votre pseudo doit avoir au moins 3 caractères et pas plus de 15. Pas de caractères spéciaux. Des chiffres seulement à la fin.{% endif %}
                    {% if userData == 'Email' %}Veuillez entrer une adresse mail valide.{% endif %}
                    {% if userData == 'Mot de passe' %}Votre mot de passe doit avoir au moins 8 caractères, pas plus de 50 et doit comporter au moins une majuscule, un caractère spécial et un chiffre.{% endif %}</span></div>
                </div>

                <label for="new">Veuillez entrer un {{userData |lower }}: <i class=" fa fa-circle"><i class=" fa fa-info"></i></i></label>
                <input type="{% if userData == 'Mot de passe' %}password{% else %}text{% endif %}" id="new" name="new" maxlength="50" size="50">

                <label for="new2">Veuillez confirmer votre {{userData |lower }}:</label>
                <input type="{% if userData == 'Mot de passe' %}password{% else %}text{% endif %}" id="new2" name="new2" maxlength="50" size="50">

                <input type="submit" id="saver" value="Modifier">

            </form>

        </section>
{% endblock %}