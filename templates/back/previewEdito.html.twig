{% extends "/front/layout.html.twig" %}

{% block title %}
    aperçu éditorial
{% endblock %}

{% block script %}
    <script src="js/navbar.js"></script>
{% endblock %}

{% block content %}

    <div id="sectionImg">
        <img class="rubricImg" src="images/{{magazine.cover}}" alt="{{magazine.cover}}">
    </div>

    <section id="article">

        <div id="titleArticle">
            <a href="index.php?action=previewMag&amp;idMag={{magazine.id_mag}}"><h3>Magazine N°{{magazine.numberMag}}</h3></a>
            <h1>Editorial</h1>
            <a href="index.php?action=previewMag&amp;idMag={{magazine.id_mag}}"><h3>Magazine N°{{magazine.numberMag}}</h3></a>
            <div id="separator02"></div>
        </div>

        <div id="articleContent">
            <span>{{decode(magazine.editorial) |raw}}</span>
        </div>
        
    </section>
{% endblock %}